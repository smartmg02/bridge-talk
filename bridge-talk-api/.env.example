# ✅ 正式環境專用
NODE_ENV=production

# 🔐 Supabase 設定（從 Supabase 介面取得）
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# 🔑 OpenAI 私鑰（server only，不能加 NEXT_PUBLIC）
OPENAI_API_KEY=

# 📴 關閉 logger
NEXT_PUBLIC_SHOW_LOGGER=false

# 🍪 Cookie 安全設定
SUPABASE_COOKIE_NAME=sb
SUPABASE_COOKIE_DOMAIN=yourdomain.com
SUPABASE_COOKIE_SECURE=true
